/* static/css/style.css */

/* 1. 变量和全局设置
------------------------------------------------- */
:root {
    --border-radius-lg: 16px; /* "圆润" - 大圆角 */
    --border-radius-md: 12px; /* "圆润" - 中圆角 */
    --border-radius-sm: 8px;  /* "圆润" - 小圆角 */

    --color-primary: #539ae5; /* 保留Bootstrap主色调，但可以换成更柔和的，如 #6a5af9 */
    --color-success: #58c190;
    --color-warning: #eaca68;
    --color-danger: #cb4a57;

    --card-bg: rgba(255, 255, 255, 0.75); /* 玻璃卡片背景 */
    --card-border: rgba(255, 255, 255, 0.3);
    --text-color: #212529;
    --text-muted: #6c757d;

    --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.05);
    --shadow-hover: 0 8px 32px rgba(0, 0, 0, 0.15); /* 交互阴影 */

    --transition-smooth: all 0.3s ease-in-out; /* 自然交互 */

    --text-color-muted: #6c757d;
    --bg-color-lighter: #cbd5df;
    --bg-color-hover: #ffffff;
    --border-color: #dee2e6;
    --primary-color: #007bff;
    --primary-color-light: #e0eaff;
    --primary-color-dark: #0056b3;

}

body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); /* 低色彩 - 柔和渐变背景 */
    min-height: 100vh;
    color: var(--text-color);
}

/* 2. 导航栏
------------------------------------------------- */
.navbar-custom {
    /* 导航栏也使用轻微的玻璃效果 */
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--card-border);
    padding-top: 1rem;
    padding-bottom: 1rem;
    box-shadow: var(--shadow-light);
}

.navbar-custom .navbar-brand {
    font-size: 1.5rem;
    font-weight: 600;
}

/* 3. 主内容容器
------------------------------------------------- */
.main-content {
    padding-top: 2rem;
    padding-bottom: 4rem;
}

/* 4. 模糊玻璃卡片 (核心)
------------------------------------------------- */
.card-glass {
    background: var(--card-bg);
    backdrop-filter: blur(15px); /* "模糊玻璃" */
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid var(--card-border);
    border-radius: var(--border-radius-lg); /* "圆润" */
    box-shadow: var(--shadow-light);
    transition: var(--transition-smooth); /* "自然交互" */
    overflow: hidden; /* 确保子元素不溢出圆角 */
}

.card-glass:hover {
    box-shadow: var(--shadow-hover);
    /*transform: translateY(-5px); !* "自然交互" - 悬浮 *!*/
}

.card-glass .card-header {
    background: rgba(255, 255, 255, 0.5); /* 头部更透明一点 */
    border-bottom: 1px solid var(--card-border);
    padding: 1.25rem 1.5rem;
}

.card-glass .card-body {
    padding: 1.5rem;
}

.card-glass .card-footer {
    background: rgba(255, 255, 255, 0.5);
    border-top: 1px solid var(--card-border);
    padding: 1.25rem 1.5rem;
}

/* 5. 卡片网格 (响应式)
------------------------------------------------- */
.card-grid {
    display: grid;
    gap: 1.5rem;
    /* 题卡每行最多两个 (PC) */
    grid-template-columns: repeat(2, 1fr);
}

/* 响应式：如果屏幕缩小则每行一个 (Mobile) */
@media (max-width: 768px) {
    .card-grid {
        grid-template-columns: 1fr;
    }
}

.bank-card-link {
    text-decoration: none;
    color: inherit;
}

/* 6. 按钮 (圆润 & 交互)
------------------------------------------------- */
.btn {
    border-radius: var(--border-radius-md); /* "圆润" */
    padding: 0.75rem 1.25rem;
    font-weight: 600;
    transition: var(--transition-smooth);
    border-width: 1px;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
}

.btn-primary { background-color: var(--color-primary); border-color: var(--color-primary); }
.btn-success { background-color: var(--color-success); border-color: var(--color-success); }
.btn-outline-primary { border-color: var(--color-primary); color: var(--color-primary); }
.btn-outline-primary:hover { background-color: var(--color-primary); }
.btn-outline-danger { border-color: var(--color-danger); color: var(--color-danger); }
.btn-outline-danger:hover { background-color: var(--color-danger); color: white; }

.btn-group-vertical .btn {
    margin-bottom: 0.5rem; /* 垂直按钮组增加间距 */
}
.btn-group-vertical .btn:last-child {
    margin-bottom: 0;
}

/* 7. 表单元素
------------------------------------------------- */
.form-control {
    border-radius: var(--border-radius-sm);
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid var(--card-border);
    transition: var(--transition-smooth);
}

.form-control:focus {
    background: #fff;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(0,123,255,0.25);
}

.search-input {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(83, 154, 229, 0.35);
    box-shadow: inset 0 2px 4px rgba(83, 154, 229, 0.12);
    transition: var(--transition-smooth);
}

.search-input::placeholder {
    color: rgba(33, 37, 41, 0.45);
}

.search-input:not(:focus) {
    background: rgba(255, 255, 255, 0.92);
}

.form-check-input {
    border-radius: 4px;
    transition: var(--transition-smooth);
}
.form-check-input[type="radio"] {
    border-radius: 50%;
}

.filter-type-group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.filter-type-btn {
    border-radius: var(--border-radius-md);
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    min-width: 6rem;
    border-width: 2px;
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 0 4px 12px rgba(83, 154, 229, 0.12);
}

.btn-select-type{
    border-color: #aac6e4;
    color: var(--color-primary);
    height: 40px;
    line-height: 20px;
    padding: 8px 10px;
}

.btn-select-type:hover { background-color: var(--color-primary); }


.btn-check:checked + .filter-type-btn,
.btn-check:focus + .filter-type-btn,
.filter-type-btn:hover {
    background: var(--color-primary);
    color: #fff;
    border-color: var(--color-primary);
    box-shadow: 0 6px 18px rgba(83, 154, 229, 0.35);
}

.search-group {
    display: flex;
    height: 40px;
    width: 100%;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(83, 154, 229, 0.2);
    border-radius: var(--border-radius-md);
    box-shadow: inset 0 2px 6px rgba(0, 0, 0, 0.05);
}

.date-range-input {
    flex: 1;
}

.search-group .form-control {
    border: none;
    background: transparent;
    padding: 0.25rem 0;
    box-shadow: none;
}

.search-group .form-control:focus {
    background: #fff;
    box-shadow: none;
}

.date-range-separator {
    color: var(--text-muted);
    font-weight: 600;
}

@media (max-width: 576px) {
    .search-group {
        flex-direction: column;
        align-items: stretch;
        gap: 0.5rem;
    }

    .date-range-separator {
        display: none;
    }
}

/* 8. 页面特定样式
------------------------------------------------- */
/* 题库详情页头部 */
.page-header {
    margin-bottom: 2rem;
    padding: 2rem;
    border-radius: var(--border-radius-lg);
    background: var(--card-bg);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid var(--card-border);
    box-shadow: var(--shadow-light);
}

@media (max-width: 768px) {
    .page-header {
        flex-direction: column;
        align-items: flex-start !important;
    }
    .page-header .btn {
        margin-top: 1rem;
        width: 100%;
    }
}

/* 题目卡片 */
.question-card .badge {
    padding: 0.5em 0.75em;
    font-size: 0.85rem;
    border-radius: var(--border-radius-sm);
    font-weight: 600;
}

/* 系统信息卡片 */
.info-card .info-item {
    display: flex;
    align-items: center;
    padding: 1rem 0;
}
.info-card .info-item i {
    font-size: 1.75rem;
    margin-right: 1.5rem;
    width: 40px;
    text-align: center;
}
.info-card .info-item:not(:last-child) {
    border-bottom: 1px solid var(--card-border);
}

/* 首页无题库提示 */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
}
.empty-state i {
    font-size: 4rem;
    color: var(--text-muted);
    opacity: 0.5;
    margin-bottom: 1.5rem;
}

/* 题目图片解析弹窗 */
.image-drop-zone {
    border: 2px dashed var(--color-primary);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    text-align: center;
    background: rgba(255, 255, 255, 0.6);
    color: var(--text-muted);
    cursor: pointer;
    transition: var(--transition-smooth);
}

.image-drop-zone:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(83, 154, 229, 0.2);
}

.image-drop-zone.dragover {
    background: rgba(83, 154, 229, 0.1);
    border-color: var(--color-primary);
    color: var(--color-primary);
}

#imagePreviewList .list-group-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
}

.image-preview-remove {
    border: none;
    background: transparent;
    color: var(--color-danger);
    cursor: pointer;
}

.image-preview-remove:hover {
    color: #a8323f;
}

/* --- (以下是新增样式) --- */

/* 8. 页面特定样式 (补充 - Request 2)
------------------------------------------------- */
.question-actions-wrapper {
    display: flex;
    align-items: flex-end; /* 垂直-底部对齐 */
    justify-content: flex-end; /* 水平-右侧对齐 */
    width: 100%; /* 确保在 flex 布局中占满 */
}

.question-actions {
    display: flex;
    gap: 0.5rem; /* 按钮间距 */
}

.question-actions .btn {
    border-radius: var(--border-radius-sm) !important; /* "四边同样的小弧度圆角" */
    padding: 0.25rem 0.75rem; /* "缩小按钮尺寸" */
    font-size: 0.875rem;
}

/* 响应式：移动端 (Request 1 & 2) */
@media (max-width: 767.98px) {
    /* 在 .card-grid 切换为单列时 (Bootstrap 的 -md 断点) */
    .question-actions-wrapper {
        justify-content: flex-end; /* 确保按钮在右侧 */
        margin-top: 1rem; /* 在移动端，按钮在内容下方，增加间距 */
    }
}

/* 9. 浮动操作按钮 (FAB) (Request 3)
------------------------------------------------- */
.fab-add-question {
    position: fixed;
    bottom: 2.5rem;
    right: 2.5rem;
    width: 56px;
    height: 56px;
    background-color: var(--color-success);
    color: #fff;
    border-radius: 50%; /* 全圆角 */
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    box-shadow: var(--shadow-light);
    transition: var(--transition-smooth);
    text-decoration: none;
    z-index: 1050; /* 确保在顶层 */
}

.fab-add-question:hover {
    transform: translateY(-4px) scale(1.05); /* "人机交互优化" */
    box-shadow: var(--shadow-hover);
    color: #fff;
}

